<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fdusoft.matchcards.MainActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/testfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Friends" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/add_friend_text"
        android:layout_below="@+id/testfriend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/add_frinend_button"
        android:layout_toStartOf="@+id/add_frinend_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加好友"
        android:id="@+id/add_frinend_button"
        android:layout_alignBottom="@+id/add_friend_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/friend_list"
        android:layout_below="@+id/add_friend_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/add_frinend_button"
        android:layout_alignEnd="@+id/add_frinend_button" />

</RelativeLayout>
